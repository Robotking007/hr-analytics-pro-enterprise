# Normalize line endings across the repo (LF by default)
* text=auto eol=lf

# Common text files (explicit LF)
*.py text eol=lf
*.sql text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.css text eol=lf
*.html text eol=lf

# Windows scripts keep CRLF
*.bat eol=crlf
*.cmd eol=crlf
*.ps1 eol=crlf
